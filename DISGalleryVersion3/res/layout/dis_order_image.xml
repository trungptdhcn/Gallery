<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/dis_order_image_rlTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_topbar"
            >
        <Button
                android:id="@+id/dis_order_image_btCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_topbar_9_patch"
                android:text="Cancel"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginTop="@dimen/button_vertical_margin"
                android:layout_marginBottom="@dimen/button_vertical_margin"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentLeft="true"
                />
        <TextView
                android:id="@+id/dis_order_image_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                />
        <Button
                android:id="@+id/dis_order_image_btSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_topbar_9_patch"
                android:text="Save"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/button_horizontal_margin"
                android:layout_marginTop="@dimen/button_vertical_margin"
                android:layout_marginBottom="@dimen/button_vertical_margin"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

    </RelativeLayout>
    <com.qsoft.components.gallery.dynamicgrid.DynamicGridView
            android:id="@+id/dis_order_dynamic_grid"
            style="@style/PhotoGridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="@dimen/image_thumbnail_size"
            android:horizontalSpacing="@dimen/image_thumbnail_spacing"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/image_thumbnail_spacing"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            />

</LinearLayout>