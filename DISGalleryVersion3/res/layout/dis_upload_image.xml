<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black">
    <RelativeLayout
            android:id="@+id/dis_upload_image_rlTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_topbar"
            >
        <Button
                android:id="@+id/dis_upload_image_btClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_topbar_9_patch"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="Close"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginTop="@dimen/button_vertical_margin"
                android:layout_marginBottom="@dimen/button_vertical_margin"
                />
        <Button
                android:id="@+id/dis_upload_image_btUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_topbar_9_patch"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Upload"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/button_horizontal_margin"
                android:layout_marginTop="@dimen/button_vertical_margin"
                android:layout_marginBottom="@dimen/button_vertical_margin"
                />
    </RelativeLayout>
    <GridView
            android:id="@+id/dis_upload_image_grvImage"
            style="@style/PhotoGridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="@dimen/image_thumbnail_size"
            android:horizontalSpacing="@dimen/image_thumbnail_spacing"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/image_thumbnail_spacing" >
            >
    </GridView>
</LinearLayout>