<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/dis_grid_image_item_rlContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
        <ImageView
                android:id="@+id/dis_order_image_item_ivImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/image_custom_background"
                android:padding="@dimen/padding_item"
                />
        <CheckBox
                android:id="@+id/dis_order_image_item_cbShowImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:button="@null"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginTop="@dimen/button_horizontal_margin"
                />
    </RelativeLayout>
</LinearLayout>